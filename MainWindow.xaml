<Window x:Class="AnimalSimsUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalSimsUp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Width="1920" Height="1080"
        WindowState="Maximized" WindowStyle="None" Background="#FF0E0202">
        
    <Grid>
        <ContentControl x:Name="contentControlAnimal">
            <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="0" Margin="45,45,0,0" VerticalAlignment="Top" Width="0"/>
        </ContentControl>
    </Grid>
</Window>
